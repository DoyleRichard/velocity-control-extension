{
  "manifest_version": 3,
  "name": "Velocity Control 视频速率控制器",
  "version": "1.0.0",
  "description": "Control playback speed of any HTML5 video",
  
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "视频速率控制器"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content_scripts/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "src/background/background.js"
  },
  
  "commands": {
    "increase_speed": {
      "suggested_key": {
        "default": "Ctrl+Up",
        "mac": "Command+Up"
      },
      "description": "Increase playback speed"
    },
    "decrease_speed": {
      "suggested_key": {
        "default": "Ctrl+Down",
        "mac": "Command+Down"
      },
      "description": "Decrease playback speed"
    },
    "reset_speed": {
      "suggested_key": {
        "default": "Ctrl+Shift+0",
        "mac": "Command+Shift+0"
      },
      "description": "Reset to normal speed"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["<all_urls>"]
  }]
}